
RandomPlacement          # determine window placement automatically
NoGrabServer
RestartPreviousState
DecorateTransients
TitleFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
ResizeFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
MenuFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
IconFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
IconManagerFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*"
#ClientBorderWidth

Color
{
    BorderColor "rgb:0/0/0"
    DefaultBackground "rgb:2/a/9"
    DefaultForeground "gray85"
    TitleBackground "rgb:0/0/0"
    TitleForeground "gray85"
    MenuBackground "rgb:0/0/0"
    MenuForeground "gray85"
    MenuBorderColor "slategrey"
    MenuTitleBackground "gray70"
    MenuTitleForeground "rgb:2/a/9"
    IconBackground "rgb:0/0/0"
    IconForeground "gray85"
    IconBorderColor "gray85"
    IconManagerBackground "rgb:2/a/9"
    IconManagerForeground "gray85"
}

Cursors
{
    Frame     "left_ptr"
    Title     "left_ptr"
    Icon      "left_ptr"
    IconMgr   "left_ptr"
    Move      "fleur"
    Resize    "fleur"
    Menu      "hand1"
    Button    "hand2"
    Wait      "clock"
    Select    "left_ptr"
    Destroy   "pirate"
}

WindowRing 
{
	"st" 
	"firefox"
	"chromium"
	"gimp"
}

#
# Define some useful functions for motion-based actions.
#
MoveDelta 3
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }

#
# Set some useful bindings.  Sort of uwm-ish, sort of simple-button-ish
#
Button1 = : root : f.menu "defops"

Button1 = m : window|icon : f.function "move-or-lower"
Button2 = m : window|icon : f.iconify
Button3 = m : window|icon : f.function "move-or-raise"

Button1 = : title : f.function "move-or-raise"
Button2 = : title : f.raiselower

Button1 = : icon : f.function "move-or-iconify"
Button2 = : icon : f.iconify

Button1 = : iconmgr : f.iconify
Button2 = : iconmgr : f.iconify

Function "hide-next" { f.warpring "next" f.iconify }

"Tab" = m     : all : f.focus
"b" = m     : all : f.iconify
"n" = m     : all : f.fullzoom
"m" = m     : window : f.function "hide-next"
"x" = m      : all : f.warpring "next"
"z" = m : all : f.delete
"t" = m : all : f.exec "exec st &"
"d" = m : all : f.exec "exec dmenu_run -nf '#BBBBBB' -nb '#000000' -sb '#292929' -sf '#EEEEEE' -fn 'monospace-10' -p 'Y'"
#Button1 = s : all : f.menu "defops"

Function "abl" { f.lefticonmgr f.showiconmgr}
Function "abd" { f.downiconmgr f.showiconmgr}
Function "abu" { f.upiconmgr  f.showiconmgr}
Function "abr" { f.righticonmgr f.showiconmgr}

ShowIconManager
IconManagerGeometry "320x200+0+0" 3
"h" = m : all : f.function "abl"
"j" = m : all : f.function "abd"
"k" = m : all : f.function "abu"
"l" = m : all : f.function "abr"

#
# And a menus with the usual things
#
menu "defops"
{
"Twm"	f.title
"Iconify"	f.iconify
"Resize"	f.resize
"Move"		f.move
"Raise"		f.raise
"Lower"		f.lower
"Swap Screen"   f.warptoscreen "next"
"Zoom"          f.zoom
"Full Zoom"     f.fullzoom
"Identify"      f.identify
"Force Move"    f.forcemove
""		f.nop
"Focus"		f.focus
"Unfocus"	f.unfocus
"Show Iconmgr"	f.showiconmgr
"Hide Iconmgr"	f.hideiconmgr
""		f.nop
"Xterm"		f.exec "exec xterm -ls -xrm 'XTerm*selectToClipboard: true' &"
"XtermB"	f.exec "exec xterm -fa monaco -fs 13 -bg black -fg green -xrm 'XTerm*selectToClipboard: true' &"
""		f.nop
"Kill"		f.destroy
"Delete"	f.delete
""		f.nop
"Restart"	f.restart
"Exit"		f.quit
}

